                <div class="card-footer d-flex justify-content-between bg-light border">
                    <a href="@Url.Action("Detalle", "Producto")" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Ver detalle</a>
                    <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Añadir al carrito</a>
                </div>
            </div>
        </div>
        <!-- Products End -->
    </div>
</div>