@{
    ViewData["Title"] = "Notas y Cuerdas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navbar Start -->
<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                <h6 class="m-0">Categorías</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
                <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">

                    <a href="@Url.Action("ConsultarPlatillos", "Instrumento")" class="nav-item nav-link">Platillos</a>
                    <a href="@Url.Action("ConsultarBaterias", "Instrumento")" class="nav-item nav-link">Baterías</a>
                    <a href="@Url.Action("ConsultarBajos", "Instrumento")" class="nav-item nav-link">Bajos</a>
                    <a href="@Url.Action("ConsultarGuitarras", "Instrumento")" class="nav-item nav-link">Guitarras</a>

                    <a href="@Url.Action("ConsultarPianos", "Instrumento")" class="nav-item nav-link">Pianos y teclados</a>


                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold">Notas y Cuerdas</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Inicio</a>
                        <a href="@Url.Action("ConsultarInstrumentos", "Instrumento")" class="nav-item nav-link">Instrumentos</a>


                        @if (Context.Session.GetString("NombreUsuario") != null)
                        {
                            <a href="@Url.Action("ConsultarFacturas", "Carrito")" class="nav-item nav-link">Facturas</a>
                            @if (Context.Session.GetString("RolUsuario") == "1")
                            {

                                <a href="@Url.Action("MantenimientoInstrumentos", "Instrumento")" class="nav-item nav-link">Mantenimiento Instrumentos</a>
                                <a href="@Url.Action("ConsultarUsuarios", "Usuario")" class="nav-item nav-link">Mantenimiento Usuarios</a>

                            }
                        }

                        <a href="@Url.Action("Contacto", "Home")" class="nav-item nav-link">Contacto</a>
                    </div>

                    @if (Context.Session.GetString("NombreUsuario") != null)
                    {
                        <div class="navbar-nav ml-auto py-0">
                            <a href="@Url.Action("CerrarSesion", "Login")" class="nav-item nav-link">Cerrar Sesión</a>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-nav ml-auto py-0">
                            <a href="@Url.Action("IniciarSesion", "Login")" class="nav-item nav-link">Iniciar Sesión</a>

                        </div>
                    }
                </div>
            </nav>
            <div id="header-carousel" class="carousel slide" data-ride="carousel">

                @if (Context.Session.GetString("NombreUsuario") != null)
                {
                    <div class="carousel-inner">
                        <div class="carousel-item active" style="height: 410px;">
                            <img class="img-fluid" src="imagenes/carru1.jpg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h4 class="text-light text-uppercase font-weight-medium mb-3">Últimos ingresos</h4>
                                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Disfruta nuestros productos</h3>
                                    <a href="@Url.Action("ConsultarInstrumentos", "Instrumento")" class="btn btn-light py-2 px-3">Comprar ahora</a>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item" style="height: 410px;">
                            <img class="img-fluid" src="imagenes/carru3.jpg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h4 class="text-light text-uppercase font-weight-medium mb-3">Últimos ingresos</h4>
                                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Disfruta nuestros productos</h3>
                                    <a href="@Url.Action("ConsultarInstrumentos", "Instrumento")" class="btn btn-light py-2 px-3">Comprar ahora</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {

                    <div class="carousel-inner">
                        <div class="carousel-item active" style="height: 410px;">
                            <img class="img-fluid" src="imagenes/carru1.jpg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h4 class="text-light text-uppercase font-weight-medium mb-3">Últimos ingresos</h4>
                                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Disfruta nuestros productos</h3>
                                    <a href="@Url.Action("IniciarSesion", "Login")" class="btn btn-light py-2 px-3">Comprar ahora</a>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item" style="height: 410px;">
                            <img class="img-fluid" src="imagenes/carru3.jpg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h4 class="text-light text-uppercase font-weight-medium mb-3">Últimos ingresos</h4>
                                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Disfruta nuestros productos</h3>
                                    <a href="@Url.Action("IniciarSesion", "Login")" class="btn btn-light py-2 px-3">Comprar ahora</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Navbar End -->
<!-- Featured Start -->

<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Productos de calidad</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                <h5 class="font-weight-semi-bold m-0">Envíos gratis*</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">1 mes de garantía</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Atención al cliente</h5>
            </div>
        </div>
    </div>
</div>

<!-- Featured End -->
<!-- Static Content Start -->
<div class="container-fluid bg-secondary my-5">
    <div class="row justify-content-md-center align-items-center py-5 px-xl-5">
        <div class="col-md-6 col-12 text-center py-5">
            <div class="mb-2 pb-2">
                <h2 class="section-title px-5 mb-3"><span class="bg-secondary px-2">Bienvenido</span></h2>
                <p>Explora nuestro sitio y descubre ofertas exclusivas, nuevos productos y mucho más.</p>
            </div>
            <p>¡Gracias por visitarnos!</p>
        </div>
    </div>
</div>
<!-- Static Content End -->
