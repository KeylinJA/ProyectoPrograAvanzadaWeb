@model ProyectoWEB.Entities.UsuarioEnt

@{
    ViewData["Title"] = "CambiarClave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-6">
                <div class="card" style="margin-top: 100px; margin-bottom: 100px;">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="w-100 text-center">
                                <h3 class="mb-4">Cambiar Contraseña</h3>
                            </div>
                        </div>

                        @using (Html.BeginForm("CambiarClave", "Usuario", FormMethod.Post, new { @class = "signin-form" }))
                        {

                            @ViewBag.MensajePantalla

                            <div class="form-group mb-3">
                                <label class="label" for="password">Contraseña Anterior</label>
                                @Html.TextBoxFor(m => m.contrasennaAnterior, new {@class="form-control", @type="password", @placeholder="Contraseña Anterior"})
                            </div>

                            <div class="form-group mb-3">
                                <label class="label" for="password">Nueva Contraseña</label>
                                @Html.TextBoxFor(m => m.Contrasenna, new {@class="form-control", @type="password", @placeholder="Nueva Contraseña"})
                            </div>
                            <div class="form-group">
                                <input type="submit" class="form-control btn btn-primary rounded submit px-3" value="Cambiar Contraseña">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



