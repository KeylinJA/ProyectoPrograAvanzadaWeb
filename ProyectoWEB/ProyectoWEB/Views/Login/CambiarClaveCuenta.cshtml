@model ProyectoWEB.Entities.UsuarioEnt

@{
    ViewData["Title"] = "IniciarSesion";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url(images/foto.jpg);">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Cambiar Contraseña</h3>
                            </div>
                        </div>

                        @using (Html.BeginForm("CambiarClaveCuenta", "Login", FormMethod.Post, new { @class = "signin-form" }))
                        {

                            @ViewBag.MensajePantalla

                            @Html.HiddenFor(m => m.IdUsuarioSeguro)

                            <div class="form-group mb-3">
                                <label class="label" for="username">Contraseña Temporal</label>
                                @Html.TextBoxFor(m => m.contrasennaTemporal, new {@class="form-control", @type="password", @placeholder="Contraseña Temporal"})
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Nueva Contraseña</label>
                                @Html.TextBoxFor(m => m.Contrasenna, new {@class="form-control", @type="password", @placeholder="Nueva Contraseña"})
                            </div>
                            <div class="form-group">
                                <input type="submit" class="form-control btn btn-primary rounded submit px-3" value="Cambiar Contraseña">
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




